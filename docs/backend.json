
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user-specific information, representing the parent account.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, matches Auth UID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "roles": {
          "type": "object",
          "properties": {
            "isAdmin": {
              "type": "boolean"
            },
            "isWriter": {
              "type": "boolean"
            },
            "isParent": {
              "type": "boolean"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the profile was created."
        },
        "pinHash": {
          "type": "string",
          "description": "A securely hashed version of the parent's 4-digit PIN."
        }
      },
      "required": [
        "id",
        "email",
        "createdAt"
      ]
    },
    "ChildProfile": {
      "title": "Child Profile",
      "description": "Stores information about a child, owned by a parent (UserProfile).",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the child."
        },
        "ownerParentUid": {
          "type": "string",
          "description": "The Firebase Auth UID of the parent who owns this profile."
        },
        "displayName": {
          "type": "string",
          "description": "The child's chosen display name."
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date-time",
          "description": "The child's date of birth."
        },
        "photos": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Array of Firebase Storage URLs for the child's photos."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to the child's chosen avatar image."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the profile was created."
        }
      },
      "required": [
        "id",
        "ownerParentUid",
        "displayName",
        "createdAt"
      ]
    },
    "StorySession": {
      "title": "Story Session",
      "description": "Represents a single story creation session for a child.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the story session."
        },
        "childId": {
          "type": "string",
          "description": "Reference to the child who owns this session."
        },
        "parentUid": {
          "type": "string",
          "description": "Reference to the parent account that owns this session."
        },
        "status": {
          "type": "string",
          "enum": [
            "in_progress",
            "completed"
          ],
          "description": "The current status of the story."
        },
        "currentPhase": {
          "type": "string",
          "enum": [
            "warmup",
            "story",
            "ending",
            "final"
          ],
          "description": "The current phase of the story creation flow (e.g., 'warmup', 'story')."
        },
        "currentStepIndex": {
          "type": "number",
          "description": "The index of the current step within the current phase."
        },
        "storyTitle": {
          "type": "string",
          "description": "The title of the story."
        },
        "storyVibe": {
          "type": "string",
          "description": "The chosen vibe or genre for the story."
        },
        "finalStoryText": {
          "type": "string",
          "description": "The full, final generated story text."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "promptConfigId": {
          "type": "string",
          "description": "The ID of the prompt config used for this session."
        },
        "promptConfigLevelBand": {
          "type": "string",
          "description": "The level band of the prompt config used for this session."
        },
        "storyTypeId": {
          "type": "string",
          "description": "Reference to storyTypes/{id}."
        },
        "storyPhaseId": {
          "type": "string",
          "description": "Reference to storyPhases/{id}."
        },
        "arcStepIndex": {
          "type": "number",
          "description": "0-based index into the story type's arcTemplate.steps array."
        },
        "mainCharacterId": {
          "type": "string",
          "description": "ID of the main character for this session, referencing characters/{id}."
        },
        "supportingCharacterIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of supporting characters, referencing characters/{id}."
        },
        "pendingCharacterTraits": {
          "type": "object",
          "properties": {
            "characterId": {
              "type": "string"
            },
            "characterLabel": {
              "type": "string"
            },
            "questionText": {
              "type": "string"
            },
            "askedAt": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": [
            "characterId",
            "characterLabel",
            "questionText"
          ]
        }
      },
      "required": [
        "id",
        "childId",
        "parentUid",
        "status",
        "currentPhase",
        "currentStepIndex",
        "createdAt",
        "updatedAt"
      ]
    },
    "Character": {
      "title": "Story Character",
      "description": "Represents a character in a story, owned by a child.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "ownerChildId": {
          "type": "string",
          "description": "Firebase auth uid of the child who owns this character."
        },
        "sessionId": {
          "type": "string",
          "description": "Optional: specific story session this character is tied to."
        },
        "role": {
          "type": "string",
          "enum": [
            "child",
            "family",
            "friend",
            "pet",
            "other"
          ]
        },
        "name": {
          "type": "string"
        },
        "realPersonRef": {
          "type": "object",
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "self",
                "family",
                "friend"
              ]
            },
            "label": {
              "type": "string"
            }
          }
        },
        "traits": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of short, child-level adjectives/phrases (e.g., [“soft”, “quiet”, “brave”])."
        },
        "traitsLastUpdatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when traits were last updated."
        },
        "visualNotes": {
          "type": "object",
          "properties": {
            "hair": {
              "type": "string"
            },
            "clothing": {
              "type": "string"
            },
            "specialItem": {
              "type": "string"
            },
            "styleHint": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "ownerChildId",
        "role",
        "name",
        "createdAt",
        "updatedAt"
      ]
    },
    "StoryBeat": {
      "title": "Story Beat",
      "description": "A single plot point or section of the story.",
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "A machine-readable label for the beat (e.g., 'start', 'problem')."
        },
        "childPlanText": {
          "type": "string",
          "description": "The child's one or two sentence plan for this beat."
        },
        "draftText": {
          "type": "string",
          "description": "The AI-drafted paragraph for this beat."
        }
      },
      "required": [
        "label"
      ]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "A single message in a story session conversation.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "sender": {
          "type": "string",
          "enum": [
            "child",
            "assistant",
            "system"
          ]
        },
        "text": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Choice"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "sender",
        "text",
        "createdAt"
      ]
    },
    "Choice": {
      "title": "Chat Choice",
      "description": "A tappable choice presented to the child in the chat.",
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "The text displayed to the child."
        },
        "value": {
          "type": "string",
          "description": "The machine-readable value sent back when tapped."
        },
        "introducesCharacter": {
          "type": "boolean",
          "description": "Whether this option introduces a new character."
        },
        "newCharacterLabel": {
          "type": "string",
          "description": "A short noun phrase for the new character."
        },
        "newCharacterKind": {
          "type": "string",
          "enum": [
            "toy",
            "pet",
            "friend",
            "family",
            "other"
          ],
          "description": "The kind of the new character."
        }
      },
      "required": [
        "label",
        "value"
      ]
    },
    "PromptConfig": {
      "title": "Prompt Configuration",
      "description": "Configuration for Genkit prompts, driving the conversation for a specific phase and language level.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the prompt configuration."
        },
        "phase": {
          "type": "string",
          "description": "The story creation phase this config applies to (e.g., 'warmup', 'planBeats')."
        },
        "levelBand": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "description": "Optional language complexity level this config targets."
        },
        "systemPrompt": {
          "type": "string",
          "description": "High-level behavior instructions for the Genkit LLM."
        },
        "modeInstructions": {
          "type": "string",
          "description": "Detailed instructions for the current phase."
        },
        "additionalContextTemplate": {
          "type": "object",
          "description": "A template for injecting dynamic data into the prompt. Can contain placeholders like {{childName}}."
        },
        "allowedChatMoves": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Defines the types of responses the AI is allowed to make (e.g. 'ask_short_question')."
        }
      },
      "required": [
        "id",
        "phase",
        "systemPrompt",
        "modeInstructions"
      ]
    },
    "StoryPhase": {
      "title": "Story Phase",
      "description": "A phase of the story interaction.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "phaseType": {
          "type": "string",
          "enum": [
            "warmup",
            "storyBeat",
            "ending"
          ]
        },
        "description": {
          "type": "string"
        },
        "choiceCount": {
          "type": "number"
        },
        "allowMore": {
          "type": "boolean"
        },
        "status": {
          "type": "string",
          "enum": [
            "live",
            "draft"
          ]
        },
        "orderIndex": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "phaseType",
        "choiceCount",
        "allowMore",
        "status",
        "orderIndex"
      ]
    },
    "StoryType": {
      "title": "Story Type",
      "description": "A template for a story.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "ageRange": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "live",
            "draft"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "defaultPhaseId": {
          "type": "string"
        },
        "endingPhaseId": {
          "type": "string"
        },
        "levelBands": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "arcTemplate": {
          "type": "object",
          "properties": {
            "steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "id",
        "name",
        "shortDescription",
        "status",
        "tags",
        "defaultPhaseId",
        "endingPhaseId",
        "levelBands",
        "arcTemplate"
      ]
    },
    "StoryOutputType": {
      "title": "Story Output Type",
      "description": "Defines a type of finished product the system can generate.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "live",
            "draft",
            "archived"
          ]
        },
        "ageRange": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "childFacingLabel": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "picture_book",
            "poem",
            "coloring_pages",
            "audio_script"
          ]
        },
        "layoutHints": {
          "type": "object",
          "properties": {
            "pageCount": {
              "type": "number"
            },
            "needsImages": {
              "type": "boolean"
            },
            "preferredAspectRatio": {
              "type": "string",
              "enum": [
                "landscape",
                "portrait",
                "square"
              ]
            },
            "textDensity": {
              "type": "string",
              "enum": [
                "very_low",
                "low",
                "medium"
              ]
            }
          }
        },
        "aiHints": {
          "type": "object",
          "properties": {
            "style": {
              "type": "string"
            },
            "allowRhyme": {
              "type": "boolean"
            },
            "maxPages": {
              "type": "number"
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "status",
        "ageRange",
        "category"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "email_and_password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profiles for users."
    },
    "/children/{childId}": {
      "schema": {
        "$ref": "#/entities/ChildProfile"
      },
      "description": "Stores individual child profiles, owned by a parent."
    },
    "/storySessions/{storySessionId}": {
      "schema": {
        "$ref": "#/entities/StorySession"
      },
      "description": "Stores story creation sessions."
    },
    "/storySessions/{storySessionId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/ChatMessage"
      },
      "description": "Stores the sequence of messages for a given story session."
    },
    "/characters/{characterId}": {
      "schema": {
        "$ref": "#/entities/Character"
      },
      "description": "Stores characters for stories."
    },
    "/promptConfigs/{configId}": {
      "schema": {
        "$ref": "#/entities/PromptConfig"
      },
      "description": "Stores the prompt configurations that drive the AI's behavior."
    },
    "/storyPhases/{phaseId}": {
      "schema": {
        "$ref": "#/entities/StoryPhase"
      },
      "description": "Stores the configuration for story interaction phases."
    },
    "/storyTypes/{typeId}": {
      "schema": {
        "$ref": "#/entities/StoryType"
      },
      "description": "Stores templates for different types of stories."
    },
    "/storyOutputTypes/{outputTypeId}": {
      "schema": {
        "$ref": "#/entities/StoryOutputType"
      },
      "description": "Stores definitions for different kinds of final outputs (e.g. picture book, poem)."
    }
  }
}
