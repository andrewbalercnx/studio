
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user-specific information, representing the parent account.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, matches Auth UID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "roles": {
          "type": "object",
          "properties": {
            "isAdmin": {
              "type": "boolean"
            },
            "isWriter": {
              "type": "boolean"
            },
            "isParent": {
              "type": "boolean"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the profile was created."
        },
        "pinHash": {
          "type": "string",
          "description": "A securely hashed version of the parent's 4-digit PIN (derived with scrypt)."
        },
        "pinSalt": {
          "type": "string",
          "description": "Unique salt paired with the hashed PIN."
        },
        "pinUpdatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last successful PIN update."
        }
      },
      "required": [
        "id",
        "email",
        "createdAt"
      ]
    },
    "ChildProfile": {
      "title": "Child Profile",
      "description": "Stores information about a child, owned by a parent (UserProfile).",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the child."
        },
        "ownerParentUid": {
          "type": "string",
          "description": "The Firebase Auth UID of the parent who owns this profile."
        },
        "displayName": {
          "type": "string",
          "description": "The child's chosen display name."
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date-time",
          "description": "The child's date of birth."
        },
        "photos": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Array of Firebase Storage URLs for the child's photos."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to the child's chosen avatar image."
        },
        "preferences": {
          "type": "object",
          "description": "Optional favorites captured during onboarding to personalize prompts and art.",
          "properties": {
            "favoriteColors": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Preferred colors to weave into characters or settings."
            },
            "favoriteFoods": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Snacks or meals the child loves."
            },
            "favoriteGames": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Outdoor or pretend games to reference in prompts."
            },
            "favoriteSubjects": {
              "type": "array",
              "items": { "type": "string" },
              "description": "School topics (science, art, music, etc.)."
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the profile was created."
        }
      },
      "required": [
        "id",
        "ownerParentUid",
        "displayName",
        "createdAt"
      ]
    },
    "StorySession": {
      "title": "Story Session",
      "description": "Represents a single story creation session for a child.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the story session."
        },
        "childId": {
          "type": "string",
          "description": "Reference to the child who owns this session."
        },
        "parentUid": {
          "type": "string",
          "description": "Reference to the parent account that owns this session."
        },
        "status": {
          "type": "string",
          "enum": [
            "in_progress",
            "completed"
          ],
          "description": "The current status of the story."
        },
        "currentPhase": {
          "type": "string",
          "enum": [
            "warmup",
            "story",
            "ending",
            "final"
          ],
          "description": "The current phase of the story creation flow (e.g., 'warmup', 'story')."
        },
        "currentStepIndex": {
          "type": "number",
          "description": "The index of the current step within the current phase."
        },
        "storyTitle": {
          "type": "string",
          "description": "The title of the story."
        },
        "storyVibe": {
          "type": "string",
          "description": "The chosen vibe or genre for the story."
        },
        "finalStoryText": {
          "type": "string",
          "description": "The full, final generated story text."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "promptConfigId": {
          "type": "string",
          "description": "The ID of the prompt config used for this session."
        },
        "promptConfigLevelBand": {
          "type": "string",
          "description": "The level band of the prompt config used for this session."
        },
        "storyTypeId": {
          "type": "string",
          "description": "Reference to storyTypes/{id}."
        },
        "storyTypeName": {
          "type": "string",
          "description": "Cached name of the selected story type for quick display."
        },
        "storyPhaseId": {
          "type": "string",
          "description": "Reference to storyPhases/{id}."
        },
        "endingPhaseId": {
          "type": "string",
          "description": "Reference to the ending phase, provided by the selected story type."
        },
        "arcStepIndex": {
          "type": "number",
          "description": "0-based index into the story type's arcTemplate.steps array."
        },
        "mainCharacterId": {
          "type": "string",
          "description": "ID of the main character for this session, referencing characters/{id}."
        },
        "supportingCharacterIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of supporting characters, referencing characters/{id}."
        },
        "pendingCharacterTraits": {
          "type": "object",
          "properties": {
            "characterId": {
              "type": "string"
            },
            "characterLabel": {
              "type": "string"
            },
            "questionText": {
              "type": "string"
            },
            "askedAt": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": [
            "characterId",
            "characterLabel",
            "questionText"
          ]
        },
        "selectedEndingId": {
          "type": "string",
          "description": "ID of the ending option chosen by the child."
        },
        "selectedEndingText": {
          "type": "string",
          "description": "Snapshot of the chosen ending text for compile flow context."
        },
        "progress": {
          "type": "object",
          "description": "Timestamps for key pipeline milestones to drive UI and analytics.",
          "properties": {
            "warmupCompletedAt": {
              "type": "string",
              "format": "date-time"
            },
            "storyTypeChosenAt": {
              "type": "string",
              "format": "date-time"
            },
            "storyArcCompletedAt": {
              "type": "string",
              "format": "date-time"
            },
            "endingGeneratedAt": {
              "type": "string",
              "format": "date-time"
            },
            "endingChosenAt": {
              "type": "string",
              "format": "date-time"
            },
            "compileCompletedAt": {
              "type": "string",
              "format": "date-time"
            },
            "pagesGeneratedAt": {
              "type": "string",
              "format": "date-time"
            },
            "artGeneratedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "required": [
        "id",
        "childId",
        "parentUid",
        "status",
        "currentPhase",
        "currentStepIndex",
        "createdAt",
      "updatedAt"
      ]
    },
    "StoryBook": {
      "title": "Story Book",
      "description": "Durable compiled output for a completed story session.",
      "type": "object",
      "properties": {
        "storySessionId": {
          "type": "string",
          "description": "ID of the storySessions/{id} document that produced this book."
        },
        "childId": {
          "type": "string",
          "description": "Convenience pointer back to the child profile."
        },
        "parentUid": {
          "type": "string",
          "description": "Auth UID for the parent that owns the session/book."
        },
        "storyText": {
          "type": "string",
          "description": "Compiled, linear narrative produced by the story compile flow."
        },
        "metadata": {
          "type": "object",
          "properties": {
            "paragraphs": {
              "type": "number",
              "description": "Paragraph count detected in storyText."
            },
            "estimatedPages": {
              "type": "number",
              "description": "Optional pagination guidance."
            }
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "text_ready",
            "images_pending"
          ],
          "description": "Pipeline status for downstream illustration steps."
        },
        "pageGeneration": {
          "type": "object",
          "description": "Tracks the most recent storybook page generation attempt.",
          "properties": {
            "status": {
              "type": "string",
              "enum": [
                "idle",
                "running",
                "ready",
                "error"
              ]
            },
            "lastRunAt": {
              "type": "string",
              "format": "date-time"
            },
            "lastCompletedAt": {
              "type": "string",
              "format": "date-time"
            },
            "lastErrorMessage": {
              "type": "string"
            },
            "pagesCount": {
              "type": "number"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the book document was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the book document was last updated."
        }
      },
      "required": [
        "storySessionId",
        "childId",
        "parentUid",
        "storyText",
        "createdAt",
        "updatedAt"
      ]
    },
    "StoryBookPage": {
      "title": "Story Book Page",
      "description": "Structured content for each page of a compiled story book, including cover and interior spreads.",
      "type": "object",
      "properties": {
        "pageNumber": {
          "type": "number",
          "description": "Zero-based index. 0 = front cover, last page = back cover."
        },
        "kind": {
          "type": "string",
          "enum": [
            "cover_front",
            "cover_back",
            "text",
            "image"
          ],
          "description": "Determines whether the page is a cover or an interior text/image block."
        },
        "title": {
          "type": "string",
          "description": "Optional title displayed on cover or chapter pages."
        },
        "bodyText": {
          "type": "string",
          "description": "Primary text for the page, typically 1–2 short sentences."
        },
        "displayText": {
          "type": "string",
          "description": "Human-readable version of bodyText with placeholders resolved."
        },
        "imagePrompt": {
          "type": "string",
          "description": "Short prompt describing the visual scene for future illustration generation."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "Placeholder or generated illustration for the page."
        },
        "layoutHints": {
          "type": "object",
          "properties": {
            "aspectRatio": {
              "type": "string",
              "enum": [
                "square",
                "portrait",
                "landscape"
              ]
            },
            "textPlacement": {
              "type": "string",
              "enum": [
                "top",
                "bottom"
              ]
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "pageNumber",
        "kind",
        "createdAt",
        "updatedAt"
      ]
    },
    "Character": {
      "title": "Story Character",
      "description": "Represents a character in a story, owned by a child.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "ownerChildId": {
          "type": "string",
          "description": "Firebase auth uid of the child who owns this character."
        },
        "displayName": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "description": "A full description of the character."
        },
        "relatedTo": {
          "type": "string",
          "description": "Optional: ID of the child this character is primarily associated with."
        },
        "sessionId": {
          "type": "string",
          "description": "Optional: specific story session this character is tied to."
        },
        "role": {
          "type": "string",
          "enum": [
            "family",
            "friend",
            "pet",
            "toy"
          ]
        },
        "realPersonRef": {
          "type": "object",
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "self",
                "family",
                "friend"
              ]
            },
            "label": {
              "type": "string"
            }
          }
        },
        "traits": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of short, child-level adjectives/phrases (e.g., [“soft”, “quiet”, “brave”])."
        },
        "traitsLastUpdatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when traits were last updated."
        },
        "visualNotes": {
          "type": "object",
          "properties": {
            "hair": {
              "type": "string"
            },
            "clothing": {
              "type": "string"
            },
            "specialItem": {
              "type": "string"
            },
            "styleHint": {
              "type": "string"
            }
          }
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "ownerChildId",
        "role",
        "displayName",
        "createdAt",
        "updatedAt"
      ]
    },
    "StoryBeat": {
      "title": "Story Beat",
      "description": "A single plot point or section of the story.",
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "A machine-readable label for the beat (e.g., 'start', 'problem')."
        },
        "childPlanText": {
          "type": "string",
          "description": "The child's one or two sentence plan for this beat."
        },
        "draftText": {
          "type": "string",
          "description": "The AI-drafted paragraph for this beat."
        }
      },
      "required": [
        "label"
      ]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "A single message in a story session conversation.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "sender": {
          "type": "string",
          "enum": [
            "child",
            "assistant",
            "system"
          ]
        },
        "text": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Choice"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "sender",
        "text",
        "createdAt"
      ]
    },
    "Choice": {
      "title": "Chat Choice",
      "description": "A tappable choice presented to the child in the chat.",
      "type": "object",
      "properties": {
        "label": {
          "type": "string",
          "description": "The text displayed to the child."
        },
        "value": {
          "type": "string",
          "description": "The machine-readable value sent back when tapped."
        },
        "introducesCharacter": {
          "type": "boolean",
          "description": "Whether this option introduces a new character."
        },
        "newCharacterLabel": {
          "type": "string",
          "description": "A short noun phrase for the new character."
        },
        "newCharacterKind": {
          "type": "string",
          "enum": [
            "toy",
            "pet",
            "friend",
            "family"
          ],
          "description": "The kind of the new character."
        }
      },
      "required": [
        "label",
        "value"
      ]
    },
    "PromptConfig": {
      "title": "Prompt Configuration",
      "description": "Configuration for Genkit prompts, driving the conversation for a specific phase and language level.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the prompt configuration."
        },
        "phase": {
          "type": "string",
          "description": "The story creation phase this config applies to (e.g., 'warmup', 'planBeats')."
        },
        "levelBand": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "description": "Optional language complexity level this config targets."
        },
        "systemPrompt": {
          "type": "string",
          "description": "High-level behavior instructions for the Genkit LLM."
        },
        "modeInstructions": {
          "type": "string",
          "description": "Detailed instructions for the current phase."
        },
        "additionalContextTemplate": {
          "type": "object",
          "description": "A template for injecting dynamic data into the prompt. Can contain placeholders like {{childName}}."
        },
        "allowedChatMoves": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Defines the types of responses the AI is allowed to make (e.g. 'ask_short_question')."
        }
      },
      "required": [
        "id",
        "phase",
        "systemPrompt",
        "modeInstructions"
      ]
    },
    "StoryPhase": {
      "title": "Story Phase",
      "description": "A phase of the story interaction.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "phaseType": {
          "type": "string",
          "enum": [
            "warmup",
            "storyBeat",
            "ending"
          ]
        },
        "description": {
          "type": "string"
        },
        "choiceCount": {
          "type": "number"
        },
        "allowMore": {
          "type": "boolean"
        },
        "status": {
          "type": "string",
          "enum": [
            "live",
            "draft"
          ]
        },
        "orderIndex": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "phaseType",
        "choiceCount",
        "allowMore",
        "status",
        "orderIndex"
      ]
    },
    "StoryType": {
      "title": "Story Type",
      "description": "A template for a story.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "ageRange": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "live",
            "draft"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "defaultPhaseId": {
          "type": "string"
        },
        "endingPhaseId": {
          "type": "string"
        },
        "levelBands": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "arcTemplate": {
          "type": "object",
          "properties": {
            "steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "id",
        "name",
        "shortDescription",
        "status",
        "tags",
        "defaultPhaseId",
        "endingPhaseId",
        "levelBands",
        "arcTemplate"
      ]
    },
    "StoryOutputType": {
      "title": "Story Output Type",
      "description": "Defines a type of finished product the system can generate.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "live",
            "draft",
            "archived"
          ]
        },
        "ageRange": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "childFacingLabel": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "picture_book",
            "poem",
            "coloring_pages",
            "audio_script"
          ]
        },
        "layoutHints": {
          "type": "object",
          "properties": {
            "pageCount": {
              "type": "number"
            },
            "needsImages": {
              "type": "boolean"
            },
            "preferredAspectRatio": {
              "type": "string",
              "enum": [
                "landscape",
                "portrait",
                "square"
              ]
            },
            "textDensity": {
              "type": "string",
              "enum": [
                "very_low",
                "low",
                "medium"
              ]
            }
          }
        },
        "aiHints": {
          "type": "object",
          "properties": {
            "style": {
              "type": "string"
            },
            "allowRhyme": {
              "type": "boolean"
            },
            "maxPages": {
              "type": "number"
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "status",
        "ageRange",
        "category"
      ]
    },
    "AIFlowLog": {
      "title": "AI Flow Log",
      "description": "Records an execution of a Genkit AI flow for debugging and analysis.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "flowName": {
          "type": "string",
          "description": "The name of the Genkit flow that was executed."
        },
        "status": {
          "type": "string",
          "enum": ["success", "error"]
        },
        "sessionId": {
          "type": "string",
          "description": "Optional: The story session this flow was associated with."
        },
        "prompt": {
          "type": "string",
          "description": "The full prompt sent to the language model."
        },
        "response": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text content of the response."
            },
            "finishReason": {
              "type": "string"
            },
            "model": {
              "type": "string"
            }
          }
        },
        "errorMessage": {
          "type": "string",
          "description": "The error message if the flow failed."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "flowName",
        "status",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "email_and_password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profiles for users."
    },
    "/children/{childId}": {
      "schema": {
        "$ref": "#/entities/ChildProfile"
      },
