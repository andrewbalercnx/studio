
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function canRead() {
      return request.auth == null || request.auth != null;
    }
    
    function canWrite() {
      return request.auth == null || request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth.token.isAdmin == true || request.auth.uid == userId;
    }

    match /children/{childId} {
        // Admins can read/write any child doc.
        // A user can only read/write a child doc they own.
        allow read, write: if request.auth.token.isAdmin == true || (request.resource.data.ownerParentUid == request.auth.uid);
    }
    
    match /storySessions/{sessionId} {
        allow read, write: if canRead();
    }
    
    match /storySessions/{sessionId}/messages/{messageId} {
        allow read, write: if canRead();
    }

    match /characters/{characterId} {
        allow read, write: if canRead();
    }

    match /promptConfigs/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.isAdmin == true;
    }

    match /storyPhases/{phaseId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.isAdmin == true;
    }

    match /storyTypes/{typeId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.isAdmin == true;
    }

    match /storyOutputTypes/{outputTypeId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.isAdmin == true;
    }
  }
}
