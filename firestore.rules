

// Rules version: v6 - Fix parent test harness permission denied on setup
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isServer() {
      return request.auth == null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // A user can only read/write their own profile, or an admin can.
    match /users/{userId} {
      allow read, write: if isServer() || isAdmin() || request.auth.uid == userId;
    }
    
    match /children/{childId} {
      // Allow parent to read their own child's doc, or admin. Also allow anyone to read 'help-child'
      allow read: if isServer() || isAdmin() || childId == 'help-child' || request.auth.uid == resource.data.ownerParentUid;

      // Allow parent to create a doc where they are the owner. Allow anyone to create 'help-child'.
      allow create: if isServer() || isAdmin() || (childId == 'help-child' && request.auth != null) || request.auth.uid == request.resource.data.ownerParentUid;
      
      // Allow parent to update/delete their own child's doc.
      allow update, delete: if isServer() || isAdmin() || request.auth.uid == resource.data.ownerParentUid;
      
      // Allow a parent to ONLY list their own children.
      allow list: if isServer() || isAdmin() || (request.auth != null && request.query.where[0][2] == request.auth.uid);
    }

    // Other collections are still open for now. We will lock them down next.
    match /storySessions/{document=**} { allow read, write: if true; }
    match /characters/{document=**} { allow read, write: if true; }
    match /promptConfigs/{document=**} { allow read, write: if true; }
    match /storyPhases/{document=**} { allow read, write: if true; }
    match /storyTypes/{document=**} { allow read, write: if true; }
    match /storyOutputTypes/{document=**} { allow read, write: if true; }
    match /stories/{document=**} { allow read, write: if true; }
    match /aiFlowLogs/{document=**} { allow read, write: if true; }
    match /helpWizards/{document=**} { 
      allow read: if request.auth != null;
      allow write: if isServer() || isAdmin(); 
    }
    match /printOrders/{document=**} { allow read, write: if true; }
    match /printLayouts/{document=**} { allow read, write: if true; }
  }
}
