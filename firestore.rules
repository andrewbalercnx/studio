
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isServer() {
      return request.auth == null;
    }
    
    function canRead() {
      return isServer() || request.auth != null;
    }
    
    function canWrite() {
      return isServer() || request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if isServer() || request.auth.token.isAdmin == true || request.auth.uid == userId;
    }

    match /children/{childId} {
      // Read (get/list/query) existing docs
      allow read: if isServer() || (request.auth != null
                  && (
                    request.auth.token.isAdmin == true ||
                    resource.data.ownerParentUid == request.auth.uid
                  ));

      // Create: use request.resource.data (doc being written)
      allow create: if isServer() || (request.auth != null
                    && request.resource.data.ownerParentUid == request.auth.uid);

      // Update/Delete: use resource.data (existing doc) to enforce ownership
      allow update, delete: if isServer() || (request.auth != null
                            && (
                              request.auth.token.isAdmin == true ||
                              resource.data.ownerParentUid == request.auth.uid
                            ));
    }
    
    match /storySessions/{sessionId} {
      allow read, write: if isServer() || request.auth.token.isAdmin == true || resource.data.parentUid == request.auth.uid;
    }
    
    match /storySessions/{sessionId}/messages/{messageId} {
        // Access is inherited from the parent storySession
        allow read, write: if isServer() || get(/databases/$(database)/documents/storySessions/$(sessionId)).data.parentUid == request.auth.uid || request.auth.token.isAdmin == true;
    }

    match /characters/{characterId} {
      allow read, write: if isServer() || canRead();
    }

    match /promptConfigs/{configId} {
      allow read: if isServer() || request.auth != null;
      allow write: if isServer() || request.auth.token.isAdmin == true;
    }

    match /storyPhases/{phaseId} {
      allow read: if isServer() || request.auth != null;
      allow write: if isServer() || request.auth.token.isAdmin == true;
    }

    match /storyTypes/{typeId} {
      allow read: if isServer() || request.auth != null;
      allow write: if isServer() || request.auth.token.isAdmin == true;
    }

    match /storyOutputTypes/{outputTypeId} {
      allow read: if isServer() || request.auth != null;
      allow write: if isServer() || request.auth.token.isAdmin == true;
    }
  }
}
