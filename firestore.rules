// Rules version: v4 - Secure /children list operations
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isServer() {
      return request.auth == null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // A user can only read/write their own profile, or an admin can.
    match /users/{userId} {
      allow read, write: if isServer() || isAdmin() || request.auth.uid == userId;
    }
    
    match /children/{childId} {
      // Allow a parent to read/write their own child's doc.
      // Admins can do anything.
      allow read, write: if isServer() || isAdmin() || request.auth.uid == resource.data.ownerParentUid;
      
      // Allow a parent to ONLY list their own children.
      // This is the critical rule for collection queries to work.
      allow list: if isServer() || isAdmin() || request.query.get('where')[0][2] == request.auth.uid;
    }

    // Other collections are still open for now. We will lock them down next.
    match /storySessions/{document=**} { allow read, write: if true; }
    match /characters/{document=**} { allow read, write: if true; }
    match /promptConfigs/{document=**} { allow read, write: if true; }
    match /storyPhases/{document=**} { allow read, write: if true; }
    match /storyTypes/{document=**} { allow read, write: if true; }
    match /storyOutputTypes/{document=**} { allow read, write: if true; }
    match /stories/{document=**} { allow read, write: if true; }
    match /aiFlowLogs/{document=**} { allow read, write: if true; }
    match /helpWizards/{document=**} { allow read, write: if true; }
    match /printOrders/{document=**} { allow read, write: if true; }
    match /printLayouts/{document=**} { allow read, write: if true; }
  }
}
