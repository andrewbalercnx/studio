
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      // Admins can read any user document
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Children can be read by their parent user (for now, any authenticated user)
    // and written by admins
    match /children/{childId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Story sessions can be read by any authenticated user for now.
    // Writes are restricted to admins.
    match /storySessions/{sessionId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Messages can be read by any authenticated user for now.
    // Writes are restricted to admins.
    match /storySessions/{sessionId}/messages/{messageId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Characters can be read by any authenticated user for now.
    // Writes are restricted to admins.
    match /characters/{characterId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Prompt configs can be read by any authenticated user.
    // Writes are restricted to admins.
    match /promptConfigs/{configId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Story Phases can be read by any authenticated user.
    // Writes are restricted to admins.
    match /storyPhases/{phaseId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Story Types can be read by any authenticated user.
    // Writes are restricted to admins.
    match /storyTypes/{typeId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Story Output Types can be read by any authenticated user.
    // Writes are restricted to admins.
    match /storyOutputTypes/{outputTypeId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
