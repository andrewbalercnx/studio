
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow server-side access and authenticated client access.
    // This is a temporary, permissive rule for development.
    // Server-side (Genkit flows) requests have `request.auth == null`.
    function canRead() {
      return request.auth != null || request.auth == null;
    }
    
    function canWrite() {
      return request.auth != null || request.auth == null;
    }
    
    match /{document=**} {
      allow read: if canRead();
      allow write: if canWrite();
    }
  }
}
